<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="3"
    android:padding="5sp"
    android:background="@color/text_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/instrucciones"
        android:text="@string/apunta_codigo_barras"
        android:layout_alignParentTop="true"
        android:background="@color/text_white"
        android:textColor="@color/text_black"
        android:gravity="center"
        android:layout_marginBottom="5sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_button"
        android:padding="10sp">

        <fragment
            android:id="@+id/scanner_fragment"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corners"
            android:name="curisteando.com.barcodez.SimpleScannerFragment" />
    </LinearLayout>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        card_view:cardElevation="0dp"
        android:animateLayoutChanges="true"
        android:background="@color/text_white"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_buton_scanner"
            android:padding="30sp"
            android:weightSum="2"
            android:background="@drawable/round_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/button_text"
                android:text="Si no tiene código, "
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/button_text2"
                android:text="toca aquí"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:layout_marginBottom="5sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>