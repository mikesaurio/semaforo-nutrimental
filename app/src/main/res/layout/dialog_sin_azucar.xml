<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/text_black" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight=".8"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dialogo_acercade_btnAceptar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_close"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:src="@drawable/logo_semaforo"
                android:scaleType="centerCrop"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:overScrollMode="never" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/text_azucar_dialog_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:paddingBottom="8sp"
                        android:gravity="center"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/not_zugar1" />
                    <TextView
                        android:id="@+id/text_azucar_dialog_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:paddingBottom="8sp"
                        android:gravity="center"
                        android:text="@string/not_zugar2" />
                    <TextView
                        android:id="@+id/text_azucar_dialog_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_white"
                        android:paddingBottom="8sp"
                        android:gravity="center"
                        android:text="@string/not_zugar3" />
                </LinearLayout>


            </ScrollView>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>