<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sellos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".75"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <include
                    android:id="@+id/sello_one_ok"
                    android:visibility="gone"
                    layout="@layout/sello_one_ok"/>
                <include
                    android:id="@+id/sello_one"
                    android:visibility="gone"
                    layout="@layout/sello_one"/>
                <include
                    android:id="@+id/sello_two"
                    android:visibility="gone"
                    layout="@layout/sello_two"/>
                <include
                    android:id="@+id/sello_three"
                    android:visibility="gone"
                    layout="@layout/sello_three"/>
                <include
                    android:id="@+id/sello_four"
                    android:visibility="gone"
                    layout="@layout/sello_four"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mensaje"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:background="@color/blue_button">
                        <poderdelconsumidor.com.semaforonutrimental.customes.CustomeTextView
                            android:id="@+id/tv_mensaje"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:text="Evita consumir \neste producto"
                            android:textSize="24sp"
                            android:gravity="center"/>
                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recomendaciones_comida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <include
                    layout="@layout/recomendaciones_comida"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/recomendaciones_bebidas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <include
                    layout="@layout/recomendaciones_bebida"/>
            </LinearLayout>
            <poderdelconsumidor.com.semaforonutrimental.customes.CustomeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="15sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_explica4_share" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:weightSum="6">

                <poderdelconsumidor.com.semaforonutrimental.customes.CustomeSemiBoldTextView
                    android:id="@+id/saber_mas_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@drawable/custom_button"
                    android:paddingLeft="0sp"
                    android:paddingRight="0sp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/saber"
                    android:textSize="21sp"
                    android:textColor="@color/text_white" />
                <ImageButton
                    android:id="@+id/btn_facebook"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/custom_button"
                    android:src="@drawable/ic_facebook_white" />

                <ImageButton
                    android:id="@+id/btn_twitter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/custom_button"
                    android:src="@drawable/ic_twitter_white" />
                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/custom_button"
                    android:src="@drawable/ic_share_white" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:weightSum="5">

            <poderdelconsumidor.com.semaforonutrimental.customes.CustomeSemiBoldTextView
                android:id="@+id/btn_back_scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:background="@drawable/custom_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/back_to_scanner"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/text_white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
