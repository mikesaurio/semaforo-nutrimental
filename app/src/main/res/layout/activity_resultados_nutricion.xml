<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nutricion.mx.com.applicationnutricion.ResultadosNutricionActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:overScrollMode="never"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/scrollView2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners"
                android:padding="10sp">

                <RelativeLayout
                    android:id="@+id/container_azucar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                        android:id="@+id/progress_azucar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        app:rcBackgroundColor="@color/text_white"
                        app:rcBackgroundPadding="3dp"
                        app:rcBackgroundRadius="5dp"
                        app:rcHeaderColor="@color/red_result"
                        app:rcIconPadding="2dp"
                        app:rcIconSize="50dp"
                        app:rcIconSrc="@drawable/circulo_alto"
                        app:rcMax="100"
                        app:rcProgress="100"
                        app:rcProgressColor="@color/red_result"
                        android:visibility="gone"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/container_azucar"
                    android:layout_marginTop="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/no_azucares_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:layout_below="@id/progress_azucar"
                        android:layout_gravity="bottom"
                        android:text="@string/no_contiene"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/azucares_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:layout_below="@id/progress_azucar"
                        android:layout_gravity="bottom"
                        android:text="@string/azucares_" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/round_corners"
                android:padding="10sp">

                <RelativeLayout
                    android:id="@+id/container_grasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                        android:id="@+id/progress_grasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        app:rcBackgroundColor="@color/text_white"
                        app:rcBackgroundPadding="3dp"
                        app:rcBackgroundRadius="5dp"
                        app:rcHeaderColor="@color/yellow_result"
                        app:rcIconPadding="2dp"
                        app:rcIconSize="50dp"
                        app:rcIconSrc="@drawable/circulo_medio"
                        app:rcMax="100"
                        app:rcProgress="50"
                        android:visibility="gone"
                        app:rcProgressColor="@color/yellow_result" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/container_grasa"
                    android:layout_marginTop="5sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/no_grasa_txt"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progress_grasa"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/no_contiene"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/grasa_txt"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progress_grasa"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/grasa_" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/round_corners"
                android:padding="10sp">

                <RelativeLayout
                    android:id="@+id/container_sodio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                        android:id="@+id/progress_sodio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        app:rcBackgroundColor="@color/text_white"
                        app:rcBackgroundPadding="3dp"
                        app:rcBackgroundRadius="5dp"
                        app:rcHeaderColor="@color/green_result"
                        app:rcIconPadding="2dp"
                        app:rcIconSize="50dp"
                        app:rcIconSrc="@drawable/circulo_bajo"
                        app:rcMax="100"
                        app:rcProgress="25"
                        android:visibility="gone"
                        app:rcProgressColor="@color/green_result" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/container_sodio"
                    android:layout_marginTop="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/no_sodio_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progress_sodio"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/no_contiene"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/sodio_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progress_sodio"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:text="@string/sodio_" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/round_corners_orange"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:layout_marginBottom="15sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/explicacion_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:textColor="@color/text_white"
                    android:text="@string/defaul_mensaje" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recomendaciones_comida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <include
                    layout="@layout/recomendaciones_comida"/>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/recomendaciones_bebida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <include layout="@layout/recomendaciones_bebida" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/compartir_txt"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:text="@string/compartir_" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/saber_mas_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/custom_button_purple"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/saber"
                    android:textSize="@dimen/abc_text_size_button_material"
                    android:textColor="@android:color/white" />

                <ImageButton
                    android:id="@+id/btn_twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/custom_button_purple"
                    android:src="@mipmap/ic_social_twitter" />

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_purple"
                    android:src="@mipmap/ic_launcher_share" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
