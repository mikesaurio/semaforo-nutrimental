<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <poderdelconsumidor.com.semaforonutrimental.customes.CustomeSemiBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/text_black"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="Si esta bebida es ..." />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners_blue"
            android:layout_weight=".4"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_arinas"/>
            <poderdelconsumidor.com.semaforonutrimental.customes.CustomeBlackTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/text_white"
                android:text="Leche, semi o descremada natural" />
        </LinearLayout>

        <poderdelconsumidor.com.semaforonutrimental.customes.CustomeNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/text_black"
            android:text="No tienes que evitarla, solo modera su consumo." />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners_blue"
            android:layout_weight=".4"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_leche"/>
            <poderdelconsumidor.com.semaforonutrimental.customes.CustomeBlackTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/text_white"
                android:text="Leches vegetales" />
        </LinearLayout>


        <poderdelconsumidor.com.semaforonutrimental.customes.CustomeNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/text_black"
            android:text="Mejor prepara leche vegetal casera y complementa con fuentes de calcio." />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners_blue"
            android:layout_weight=".4"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_yogurth"/>
            <poderdelconsumidor.com.semaforonutrimental.customes.CustomeBlackTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/text_white"
                android:text="Yogurt y bebidas lácteas saborizadas" />
        </LinearLayout>



        <poderdelconsumidor.com.semaforonutrimental.customes.CustomeNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/text_black"
            android:text="Mejor toma leche sola, con canela o vainilla sin azúcar." />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners_blue"
            android:layout_weight=".4"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_refrescos"/>
            <poderdelconsumidor.com.semaforonutrimental.customes.CustomeBlackTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/text_white"
                android:text="Refresco, jugo o bebida azucarada" />
        </LinearLayout>

        <poderdelconsumidor.com.semaforonutrimental.customes.CustomeNormalTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/text_black"
            android:text="Mejor toma agua simple, agua fresca con fruta y poca azúcar; o té o café sin azúcar." />
    </LinearLayout>
</LinearLayout>
